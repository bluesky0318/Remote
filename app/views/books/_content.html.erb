<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="td-normal"><%= book.name %></td>
        <td class="td-normal"><%= book.description %></td>
        <td class="td-normal"><%= link_to 'Show', book %></td>
        <td class="td-normal"><%= link_to 'Edit', edit_book_path(book) %></td>
        <td class="td-normal"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

